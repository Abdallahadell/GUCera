<!DOCTYPE html>
<html lang="en">
    <head>
        <title>View Feedback</title>
      </head>
        <body>
            <form method="POST" action="/viewFeedback">
                Course :<select id="cid" name="cid">
                    <option selected value='0'>Choose a course</option>
                    <%   
                    for(i = 0 ; i < result1.length ; i++) {
                    %>
                    <option value = "<%= result1[i].id %>" > <%=result1[i].name %> </option>
                    <% } %> 
                </select>
                <br>
                <input id="Button2"  type="submit" value="View feedback">
                </form>
            <div class="table-data">
                    <table border ="3">
                        <tr>
                            <th>Number</th>
                            <th>Comment</th>
                            <th>Likes</th>
                        </tr>
                        <%
                        if(result.length!=0){
                        for(i = 0;i<result.length;i++){
                        %>
                        <tr>
                            <td><%=result[i].number %></td>
                            <td><%=result[i].comment %></td>
                            <td><%=result[i].numberOfLikes %></td>
                        </tr>
                        <% } %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>
                        <% } %>
                    </table>
            </div>
        </body>
</html>