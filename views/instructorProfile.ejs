        <a href="/logout" style="float: right;" class="logout">Log out</a>
        <link rel="stylesheet" href="/css/instStyle.css">
    </div>
    <div class="dumbo">
        <label>First name :</label>
        <span><%=result[0].firstName  %> </span>
        <br style="-webkit-user-select: auto;">
        <label>Last name :</label>
        <span><%=result[0].lastName  %> </span>
        <br style="-webkit-user-select: auto;">
        <label>Gender :</label>
        <% if(result[0].gender.readInt8()==0){result[0].gender="Male"} else {result[0].gender="Female"} %>
        <span><%=result[0].gender  %> </span>
        <br style="-webkit-user-select: auto;">
        <label>Email :</label>
        <span><%=result[0].email  %> </span>
        <br style="-webkit-user-select: auto;">
        <label>Address :</label>
        <span><%=result[0].address  %> </span>
        <br style="-webkit-user-select: auto;">
        <label>Rating :</label>
        <span><%=result[0].rating  %> </span>
        <br style="-webkit-user-select: auto;">
        <label>Email :</label>
        <span><%=result[0].email  %> </span>
        <br style="-webkit-user-select: auto;">
        <% for(i=0;i<result.length;i++) {%> 
        <label class="sod">Mobile number <%=[i+1] %>  :</label>             
        <span><%=result[i].mobileNumber  %> </span>
        <br>
        <% } %> 
        <br style="-webkit-user-select: auto;">
        <button class="open-button" onclick="openPhonenumber()">Add number</button>
    </div>
    <div id="myForm" style="display: none; text-align: center">
        <form method="POST" action="/addPhoneNumber">
        <label>Number :</label>
        <input type="text" name="mobile_number" minlength="8" maxlength="11" required>
        <br>
        <input type="submit" value="submit">
        </form>
    </div>

    <script>
        function openPhonenumber(){
            document.getElementById("myForm").style.display = "block";
        }       
    </script>
</body>
</html>