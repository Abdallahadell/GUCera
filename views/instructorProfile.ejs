<body class="new">
    <div class="topnav">
        <a href="/instructor">Home</a>
        <a href="addcourse">Add course</a>
        <a href="defineAssignment">Add assesment</a>
        <a href="/addInstructor">Add instructor</a>
        <a href="/updateContent">Content</a>
